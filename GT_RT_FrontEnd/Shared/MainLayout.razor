    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            user = await LocalStorage.GetStringAsync("user");
            loggedIn = !string.IsNullOrEmpty(user);
            StateHasChanged();
        }
    }
